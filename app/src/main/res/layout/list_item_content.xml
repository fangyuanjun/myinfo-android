<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

   <!-- <ImageView
        android:id="@+id/imageView_headpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginTop="5pt"
        android:src="@mipmap/nopic_foreground" />-->

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/list_item_content_image"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@mipmap/nopic_foreground"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5pt"
        android:layout_marginTop="10dp"></com.android.volley.toolbox.NetworkImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5pt"
        android:layout_marginLeft="5pt"
        android:layout_marginTop="5pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_content_title"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#367EAA"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/list_item_content_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="TextView"
                android:textColor="#818095" />

            <TextView
                android:id="@+id/list_item_content_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="TextView"
                android:textColor="#818095" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
